# Domain (use nip.io for free DNS: skillswap.174.138.15.22.nip.io)
DOMAIN=skillswap.174.138.15.22.nip.io

# Email for Let's Encrypt SSL certificates
ACME_EMAIL=your-email@example.com

# Image tag (set by CI/CD)
IMAGE_TAG=dev

# Keycloak
KEYCLOAK_ADMIN_PASSWORD=change-me-in-production
KEYCLOAK_DB_PASSWORD=change-me-in-production

# RabbitMQ
RABBITMQ_USER=skillswap
RABBITMQ_PASSWORD=change-me-in-production

# Neon DB (User Service)
USER_DB_URL=jdbc:postgresql://ep-xxx.neon.tech/skillswap_user?sslmode=require
USER_DB_USERNAME=neondb_owner
USER_DB_PASSWORD=your-neon-password

# Neon DB (Message Service)
SWAP_DB_URL=jdbc:postgresql://ep-xxx.neon.tech/skillswap_message?sslmode=require
SWAP_DB_USERNAME=neondb_owner
SWAP_DB_PASSWORD=your-neon-password
